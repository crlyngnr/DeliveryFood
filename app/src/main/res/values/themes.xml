<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodOrderApp" parent="Theme.Design.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/ubuntu_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/appColor</item>
    </style>
        <!-- Customize your theme here. -->
        <style name="Theme.FoodOrderApp" parent="Base.Theme.FoodOrderApp" />
        <style name="roundedImageView">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSize">100sp</item>
        </style>
        <style name="roundedImageRounded">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSize">40%</item>
        </style>
    <style name="cardBtn">
        <item name="android:bottomLeftRadius">90dp</item>
        <item name="android:bottomRightRadius">90dp</item>
        <item name="android:topLeftRadius">90dp</item>
        <item name="android:topRightRadius">90dp</item>
    </style>
</resources>